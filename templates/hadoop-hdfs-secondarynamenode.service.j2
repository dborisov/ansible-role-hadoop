[Unit]
Description=Hadoop HDFS Secondary Namenode daemon
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory={{ hadoop_hdfs_data_dir }}
RuntimeDirectory={{ hadoop_pid_dir }}
User={{ hadoop_hdfs_user_name }}
Group={{ hadoop_group_name }}
ExecStart={{ hadoop_home_dir }}/bin/hdfs --daemon start secondarynamenode
ExecStop={{ hadoop_home_dir }}/bin/hdfs --daemon stop secondarynamenode
TimeoutSec=30
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=default.target